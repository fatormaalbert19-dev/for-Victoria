  <script>
    const audio = document.getElementById("bgm");
    const reply = document.getElementById("reply");
    const slowBtn = document.getElementById("slowBtn");

    function playMusic(){
      audio.play().then(() => {
        reply.textContent = "Music is playing ðŸŽ¶";
        setTimeout(() => reply.textContent = "", 1800);
      }).catch(() => {
        reply.textContent = "Tap again if it didnâ€™t start. Some phones need a second tap.";
        setTimeout(() => reply.textContent = "", 2600);
      });
    }

    // Playful tease: button shifts slightly on hover/touch, but still clickable.
    function nudgeButton(){
      const x = Math.floor(Math.random() * 120) - 60;
      const y = Math.floor(Math.random() * 60) - 30;
      slowBtn.style.transform = `translate(${x}px, ${y}px)`;
      setTimeout(() => slowBtn.style.transform = "translate(0,0)", 500);
    }

    ["mouseenter","touchstart","pointerdown","focus"].forEach(evt => {
      slowBtn.addEventListener(evt, () => nudgeButton(), { passive: true });
    });

    slowBtn.addEventListener("click", () => {
      // This keeps it respectful, and also lets you know where her head is.
      reply.textContent = "Thatâ€™s okay, my love. We go take am gently. Iâ€™m here, Iâ€™m patient, and Iâ€™m serious about you ðŸ’—";
      startHearts(14);
    });

    function acceptLove(){
      // Start music reliably on the YES click
      audio.play().catch(() => {});

      document.getElementById("mainCard").style.display = "none";
      document.getElementById("valentineCard").style.display = "block";
      startHearts(30);

      // Prefill a YES text message (works best on phones)
      const msg = encodeURIComponent("Yes Jamal ðŸ’– Iâ€™ll be your girlfriend and your Valentine. Mo nifáº¹ ráº¹.");
      window.location.href = "sms:?&body=" + msg;
    }

    function startHearts(count){
      for(let i=0;i<count;i++){
        const heart = document.createElement("div");
        heart.className = "floating-heart";
        heart.textContent = "ðŸ’—";
        heart.style.left = Math.random()*100 + "vw";
        heart.style.animationDuration = (4 + Math.random()*3) + "s";
        heart.style.fontSize = (16 + Math.random()*12) + "px";
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 7000);
      }
    }
  </script>
